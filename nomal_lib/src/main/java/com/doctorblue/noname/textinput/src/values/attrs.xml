<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="TextInputLayoutStyle" format="reference"/>
    <declare-styleable name="TextInputLayout">
        <attr name="default_color" format="color"/>
        <attr name="active_color" format="color"/>
        <attr name="hint_text_size" format="dimension"/>
        <attr name="line_height" format="dimension"/>
        <attr name="android:hint" format="string"/>
        <attr name="leftIcon" format="reference"/>
        <attr name="text_input_style" format="enum">
            <enum name="bottom_line" value="1"/>
            <enum name="swipe_left_icon" value="3"/>
            <enum name="active_bottom_line" value="4"/>
        </attr>
    </declare-styleable>
</resources>