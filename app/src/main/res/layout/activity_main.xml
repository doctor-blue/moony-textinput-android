<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.devcomentry.textinputlibrary.TextInputEditText
        android:id="@+id/edt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent" />

    <com.devcomentry.textinputlibrary.TextInputLayout
        android:id="@+id/textInput"
        style="@style/Widget.MoonyLib.TextInputLayout.ActiveBottomLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt"
        app:leftIcon="@drawable/ic_baseline_account_circle">

        <com.devcomentry.textinputlibrary.TextInputEditText
            android:id="@+id/edt_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.devcomentry.textinputlibrary.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>